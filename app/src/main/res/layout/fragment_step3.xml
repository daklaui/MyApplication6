<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".ui.login.Step3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:theme="@style/AppTheme">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-light"
                android:padding="5dp"
                android:text="Autres informations personel"
                android:textAlignment="center"
                android:textColor="@color/gen_black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <TextView
                android:visibility="gone"
                android:id="@+id/Etape3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/num_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numero de telephone"
                android:textColorHint="@color/gen_black"
                android:inputType="number"
                app:met_baseColor="#212121"
                app:met_clearButton="true"
                app:met_errorColor="#F44336"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="#757575" />


        </LinearLayout>

    </ScrollView>


</FrameLayout>